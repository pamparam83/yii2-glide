{
    "name": "pamparam83/yii2-glide",
    "description": "Yii2 Glide Extension",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","glide","thumbnail"],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Eugene Terentev",
            "email": "eugene@terentev.net"
        }
    ],
    "require": {
        "php" : ">=8.1",
        "yiisoft/yii2": "^2.0.0",
        "league/glide": "^3.0",
        "league/uri": "^7.5.0",
        "symfony/http-foundation": "^7.3",
        "league/uri-components": "^7.5",
        "league/uri-interfaces": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "trntv\\glide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "trntv\\glide_tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
